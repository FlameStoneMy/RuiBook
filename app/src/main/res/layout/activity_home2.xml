<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <com.ruitech.bookstudy.widget.RoundAngleTextView
        android:id="@+id/grade_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:bgRadius="16dp"
        app:bgColor="@color/_435fe5"
        android:drawableRight="@mipmap/drop_triangle"
        android:drawableTint="@color/_ffffff"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="16dp"
        android:text="@string/grade_five"
        android:textColor="@color/_ffffff"
        android:textSize="18sp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="智慧互动课堂"
        android:textSize="27sp"
        android:textColor="@color/_ffffff"
        android:layout_marginTop="23dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/version_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/title"
        android:text=""
        android:textSize="14sp"
        android:textColor="@color/_ffffff"
        android:layout_marginLeft="16dp"
        />

    <com.ruitech.bookstudy.widget.RoundAngleTextView
        android:id="@+id/eye_protect"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        app:layout_constraintRight_toLeftOf="@id/settings"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/title"
        android:text="@string/eye_protect"
        android:textColor="@color/_ffffff"
        android:textSize="12sp"
        app:bgRadius="23dp"
        app:bgColor="@color/_435fe5"
        app:leftDrawableWidth="30dp"
        app:leftDrawableHeight="30dp"
        android:gravity="center"
        android:layout_marginRight="23dp"
        android:paddingLeft="10dp"
        android:paddingRight="18dp"
        android:drawableLeft="@mipmap/desktop_eye_protect"
        />

    <com.ruitech.bookstudy.widget.RoundAngleTextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/title"
        android:text="@string/settings"
        android:textColor="@color/_ffffff"
        android:textSize="12sp"
        app:bgRadius="23dp"
        app:bgColor="@color/_435fe5"
        app:leftDrawableWidth="30dp"
        app:leftDrawableHeight="30dp"
        android:gravity="center"
        android:layout_marginRight="23dp"
        android:paddingLeft="10dp"
        android:paddingRight="18dp"
        android:drawableLeft="@mipmap/desktop_settings"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="20dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>