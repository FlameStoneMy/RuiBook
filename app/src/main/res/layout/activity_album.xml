<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_6308ff">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/back"
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="28dp"
        android:src="@mipmap/arrow_back"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/back"
        app:layout_constraintBottom_toBottomOf="@id/back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="名著赏析"
        android:textSize="25sp"
        android:textColor="@color/_ffffff"
        />

    <com.ruitech.bookstudy.widget.RoundAngleImageView
        android:id="@+id/book_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.34"
        app:layout_constraintDimensionRatio="897:383"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="56dp"
        app:radius="10dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/book_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@id/book_img"
        app:layout_constraintTop_toTopOf="@id/book_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:textColor="@color/_ffffff"
        android:textSize="22sp"
        android:text="朝花夕拾"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="56dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/book_desc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ellipsize="end"
        app:layout_constraintLeft_toRightOf="@id/book_img"
        app:layout_constraintTop_toBottomOf="@id/book_title"
        app:layout_constraintBottom_toBottomOf="@id/book_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:textColor="@color/_ffffff"
        android:textSize="12sp"
        android:text="朝花夕拾"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="18dp"
        app:layout_constraintVertical_bias="0"
        android:layout_marginRight="56dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/book_img"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>