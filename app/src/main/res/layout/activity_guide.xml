<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_5120ec">

    <View
        android:id="@+id/body_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.41"
        app:layout_constraintHeight_percent="0.42"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/guide_icon"
        app:layout_constraintWidth_percent="0.127"
        app:layout_constraintVertical_bias="0.29"
        app:layout_constraintDimensionRatio="132:97"
        app:layout_constraintLeft_toLeftOf="@id/body_container"
        app:layout_constraintRight_toRightOf="@id/body_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请连接你的Wifi"
        android:textSize="22sp"
        android:textColor="@color/_ffffff"
        app:layout_constraintLeft_toLeftOf="@id/body_container"
        app:layout_constraintRight_toRightOf="@id/body_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.459"
        app:layout_constraintVertical_chainStyle="spread"
        />

    <com.ruitech.bookstudy.widget.RoundAngleTextView
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="去设置"
        android:textSize="26sp"
        android:textColor="@color/_ffffff"
        app:bgRadius="35dp"
        app:layout_constraintLeft_toLeftOf="@id/body_container"
        app:layout_constraintRight_toRightOf="@id/body_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        app:layout_constraintVertical_bias="0.607"
        />

</androidx.constraintlayout.widget.ConstraintLayout>