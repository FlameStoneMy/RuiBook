<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ruitech.bookstudy.widget.BgView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ip_splash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/ip_splash"
        app:layout_constraintDimensionRatio="633:747"
        app:layout_constraintHeight_percent="0.33"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        />
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/desc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/hi"
        app:layout_constraintDimensionRatio="264:198"
        app:layout_constraintLeft_toRightOf="@id/ip_splash"
        app:layout_constraintBottom_toTopOf="@id/ip_splash"
        app:layout_constraintHeight_percent="0.07"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/logo"
        app:layout_constraintDimensionRatio="507:204"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/desc"
        app:layout_constraintVertical_bias="0.44"
        />

</androidx.constraintlayout.widget.ConstraintLayout>